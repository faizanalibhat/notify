{
	"info": {
		"_postman_id": "a3a3e3d1-4e3e-4b1e-9c1c-2e2e2e2e2e2e",
		"name": "Fruits",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Notification Routes",
			"description": "This folder contains all the routes for managing notifications.",
			"item": [
				{
					"name": "Get All Notifications",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}{{notify}}/notification/bulk",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"{{notify}}",
								"notification",
								"bulk"
							]
						}
					},
					"response": []
				},
				{
					"name": "Mark Notification Seen",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}{{notify}}/notification/:id/seen",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"{{notify}}",
								"notification",
								":id",
								"seen"
							]
						}
					},
					"response": []
				},
				{
					"name": "Mark All As Seen",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}{{notify}}/notification/seen",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"{{notify}}",
								"notification",
								"seen"
							]
						}
					},
					"response": []
				}
			],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"try {",
							"    let response = pm.response.json();",
							"",
							"    if (pm.request.method === 'POST' && pm.response.code >= 200 && pm.response.code < 300) {",
							"        let resourceId = response.id || response._id;",
							"        if (resourceId) {",
							"            pm.environment.set(\"notificationId\", resourceId);",
							"            console.log(\"Saved notificationId: \" + resourceId);",
							"        }",
							"    }",
							"",
							"    if (pm.request.method === 'DELETE' && pm.response.code >= 200 && pm.response.code < 300) {",
							"        pm.environment.set(\"notificationId\", \"\");",
							"        console.log(\"Cleared notificationId.\");",
							"    }",
							"} catch (e) {",
							"    console.log(e);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			]
		}
	]
}